{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}
 {% block stylesheets %}
     {{ parent() }}
     <link href="{{ asset('css/datatables.css') }}" rel="stylesheet"/>
 {% endblock %}

 {% block javascripts %}
     {{ parent() }}
     <script src="{{ asset('js/script.js') }}" type="text/javascript"></script>
     <script src="{{ asset('js/datatables.js') }}" type="text/javascript"></script>
 {% endblock %}

{% block body %}
    <div class="container">
    <h1>Article index</h1>

    <table class="table table_id">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Contents</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.Contents }}</td>
                <td><img src="{{ asset('uploads/'~ article.image) }}" class="card-img-top" alt="{{ article
                    .title }}" style="max-width: 150px"></td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <a class="btn btn-success" href="{{ path('article_new') }}">Create new</a>
    </div>


{% endblock %}
