{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <section class="py-5 mt-5">

        <div class="container">
            <div class="row">
                {% if articles is not empty %}
                    {% for article in articles %}
                        <div class="card m-2" style="width: 18rem;">
                            {% if article.image %}
                                <img src="{{ asset('uploads/'~ article.image) }}" class="card-img-top" alt="{{ article
                                .title }}">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ article.title }}</h5>
                                {% if article.contents|length > 50 %}
                                    <p class="card-text">{{ article.contents|slice(0, 50) }} ... </p>
                                {% else %}
                                    <p class="card-text">{{ article.contents }}</p>
                                {% endif %}
                                <p class="card-text">Written by:{{ article.relation.firstname }}</p>
                                <a href="{{ path("detail",{"article":article.id}) }}" class="btn btn-primary">View the
                                    details</a>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="container">
                        <h1 class="text-center text-danger">Sorry No Article Found</h1>
                    </div>
                {% endif %}
            </div>
        </div>

    </section>
{% endblock %}
